<%= render 'partial/navbar' %>

<!-- チェックマーク認証情報の確認 -->
<script type="text/javascript">
	$(function(){
		<% if !@user.email.blank? %>
			$("#ver-email").attr('class','vertification-checked');
		<% end %>

		<% if !@user.phone_number.blank? %>
			$("#ver-tel").attr('class','vertification-checked');
		<% end %>

		<% if @user.provider == "facebook" %>
			$("#ver-facebook").attr('class','vertification-checked');
		<% end %>
	});
</script>


<div class="container">
	<div class="row">
		<div class="col-lg-3 col-md-4">
			<div class="user_profile row-space-4 text-center">
				<%= image_tag @user.image, class: "profile-full img-circle" %>
			</div>

			<div class="panel panel-default verifications hidden-xs hiden-sm">
				<div class="panel-heading">
					認証済みID
				</div>
				<div class="panel-body">
					<div id="var-email">
						メールアドレス
					</div>
					<br>
					<div id="ver-tel">
						電話番号
					</div>
					<br>
					<div id="ver-facebook">
						Facebook
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-9 col-md-8 col-sm-12">
			<h1>こんにちは！<%= @user.name %> です！</h1>
			<p>自己紹介</p>
			<%= @user.description %>
		</div>
	</div>
</div>
